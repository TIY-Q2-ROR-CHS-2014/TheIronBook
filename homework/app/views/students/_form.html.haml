= form_for [@location, @course, @student] do |f|
  = f.hidden_field :location_id, value: @location.id
  = f.label :name
  = f.text_field :name
  %br
  = f.label :email
  = f.text_field :email
  %br
  = f.label :phone
  = f.text_field :phone
  %br
  = f.label :bio
  = f.text_field :bio
  %br
  = f.label :social_1
  = f.text_field :social_1
  %br
  = f.label :social_2
  = f.text_field :social_2
  %br
  = f.label :social_3
  = f.text_field :social_3
  %br
  = f.submit
= link_to "Cancel"
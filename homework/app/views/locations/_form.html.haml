= form_for @locations do |f|
  = f.label :name
  = f.text_field :name
  = f.submit
  %p
  - @course.each do |course|
    = check_box_tag 'location[course_ids][]', course.id, false, {id: "course_id_#{course.id}"}
    = label_tag "course_id_#{course.id}", course.name
    %br

%p
= link_to "Return to Home Page", root_path
